
package com.example2microservice.departmentservice.model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;

@Entity
public class Employee{


	@Id
	@GeneratedValue(strategy = GenerationType.AUTO)
	private Long id;
	private String name;
	private String position;
	private int age;
	
	public Long getId() {
		return id;
	}
	public void setId(Long id) {
		this.id = id;
	}

	private Long departmentId;

	public Long getDepartmentId() {
		return departmentId;
	}

	public void setDepartmentId(Long departmentId) {
		this.departmentId = departmentId;
	}
	 
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getPosition() {
		return position;
	}
	public void setPosition(String position) {
		this.position = position;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}

	
	public Employee(Long id, String name, String position, int age) {
		super();
		this.id = id;
		this.name = name;
		this.position = position;
		this.age = age;
	}
	/*
	 * public Employee(Long id, Long departmentId, String name, String position, int
	 * age) { super(); this.id = id; this.departmentId = departmentId; this.name =
	 * name; this.position = position; this.age = age; }
	 */
	public Employee() {
		super();
	}
	/*
	 * @Override public String toString() { return "Employee [id=" + id +
	 * ", departmentId=" + departmentId + ", name=" + name + ", position=" +
	 * position + ", age=" + age + "]"; }
	 */
	
	@Override
	public String toString() {
		return "Employee [id=" + id +  ", name=" + name + ", position=" + position
				+ ", age=" + age + "]";
	}
	
	
}